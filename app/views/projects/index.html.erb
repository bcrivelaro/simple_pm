<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card project-card mb-3">
          <div class="card-body">
            <div class="mb-3">
              <span class="badge bg-<%= project_badge_color(project) %> mb-3">
                <%= project.status.humanize %>
              </span>
              <span class="text-secondary">
                <small>
                  <%= number_to_percentage(project.percentage_complete, precision: 0) %> complete
                  (<%= project.total_tasks_complete %>/<%= project.tasks.count %>)
                </small>
              </span>
            </div>
            <h5 class="card-title text-dark"><b><%= project.name %></b></h5>
            <p class="text-secondary"><%= project.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

